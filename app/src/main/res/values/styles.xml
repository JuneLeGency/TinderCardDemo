<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->

    <style name="PinkTheme" parent="AppBaseTheme">
        <item name="wallbg">@drawable/wall_bg</item>

    </style>

    <style name="PinkTheme.Card">
        <item name="malecard">@style/PinkTheme.Card.Male</item>
        <item name="femalecard">@style/PinkTheme.Card.Female</item>
    </style>

    <style name="PinkTheme.Card.Male">
        <item name="bg">@drawable/shadow_btm</item>
        <item name="name_color">@color/card_male_name_color</item>
        <item name="age_color">@color/card_male_age_color</item>
    </style>

    <style name="PinkTheme.Card.Female">
        <item name="bg">@drawable/shadow_btm</item>
        <item name="name_color">@color/card_female_name_color</item>
        <item name="age_color">@color/card_female_age_color</item>
    </style>

</resources>